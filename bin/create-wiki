#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import os
import sys
import datetime
from pathlib import Path
from inflector import English as EnglishInflector

INFLECTOR = EnglishInflector()


def slugify(text):
    return INFLECTOR.urlize(text.lower()).replace('_', '-')


if len(sys.argv) == 1:
    title = input('title: ')
else:
    title = ' '.join(sys.argv[1:])

initial = title[0].upper()
if ord(initial) < ord('A') or ord(initial) > ord('Z'):
    initial = '_'

now = datetime.datetime.now(datetime.timezone.utc).astimezone()
tickler = Path("ยง Tickler") / f"Tickler-{initial}"
dir = tickler / title
file = dir / f"ยง {title}.md"

os.makedirs(dir, exist_ok=True)

if not file.exists():
    with open(file, 'w') as fout:
        fout.write(f"""# {title}

**Status**:: #i
**Zettel**:: #zettel/permanent
**Created**:: [[{now.strftime("%Y-%m-%d")}]]
**URL**:: [blog.iany.me](https://blog.iany.me/wiki/{slugify(title)}/)

""")

print(file)

#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import os
import sys
import datetime
from pathlib import Path


if len(sys.argv) == 1:
  title = input('title: ')
else:
  title = ' '.join(sys.argv[1:])


now  = datetime.datetime.now(datetime.timezone.utc).astimezone()
year = now.year
yy   = now.strftime('%y')
mon  = now.strftime('%m')
dir  = Path("ยง Blog") / "Posts" / f"Posts - {year}" / f"{yy}{mon} - {title}"
file = dir / f"ยง {title}.md"

os.makedirs(dir, exist_ok=True)

if not file.exists():
  with open(file, 'w') as fout:
    fout.write(f"""---
date: '{now.strftime("%FT%T%z")}'
draft: true
aliases: ["{title}"]
---

# {title}
""")

print(file)

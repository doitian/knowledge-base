#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import os
import sys
import datetime
from pathlib import Path


now  = datetime.datetime.now(datetime.timezone.utc).astimezone()
year = now.year
yy   = now.strftime('%y')
date = now.strftime('%Y-%m-%d')
dir="ยง Blog/Journals/Journals - $year/What I Touched This Week $date"
dir  = Path("ยง Blog") / "Journals" / f"Journals - {year}" / f"What I Touched This Week {date}"
file = dir / f"โฏ What I Touched This Week {date}.md"

os.makedirs(dir, exist_ok=True)

if not file.exists():
  with open(file, 'w') as fout:
    fout.write(f"""---
date: {date}
description: My weekly review report.
aliases: ["What I Touched This Week {date}"]
series:
- What I Touched
---

# What I Touched This Week {date}
""")

print(file)
